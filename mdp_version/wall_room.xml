<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <About>
    <Summary>Gold-as-reward, RL-based Room Solver based on old physics-based puzzles</Summary>
  </About>

  <ServerSection>
    <ServerInitialConditions>
      <Time>
        <StartTime>1</StartTime>
        <AllowPassageOfTime>false</AllowPassageOfTime>
      </Time>
      <Weather>clear</Weather>
    </ServerInitialConditions>
    <ServerHandlers>
        <FileWorldGenerator src="/home/zephirefaith/Libraries/Malmo/projects/htn_guided_rl/wall_world/" forceReset="1"/>
        <BuildBattleDecorator>
            <GoalStructureBounds>
                <min x="-70" y="14" z="-45" />
                <max x="-68" y="15" z="-45" />
            </GoalStructureBounds>
            <PlayerStructureBounds>
                <min x="-67" y="14" z="-46" />
                <max x="-65" y="15" z="-46" />
            </PlayerStructureBounds>
        </BuildBattleDecorator>
        <ServerQuitFromTimeUp timeLimitMs="30000"/>
        <ServerQuitWhenAnyAgentFinishes/>
    </ServerHandlers>
  </ServerSection>

  <AgentSection mode="Survival">
    <Name>WallE</Name>
    <AgentStart>
      <Placement x="-66" y="14" z="-51" yaw="0"/>
			<Inventory>
 				<InventoryItem slot="0" type="diamond_pickaxe"/>
 				<InventoryItem slot="1" type="brick_stairs"/>
			</Inventory>
    </AgentStart>
    <AgentHandlers>
      <DiscreteMovementCommands/>
      <InventoryCommands/>
      <ObservationFromRay/>
      <ObservationFromGrid>
          <Grid name="front2x3">
              <min x="-1" y="1" z="1" />
              <max x="1" y="2" z="2" />
          </Grid>
      </ObservationFromGrid>
      <RewardForTouchingBlockType>
        <Block reward="-100.0" type="wool" behaviour="onceOnly"/>
        <Block reward="100.0" type="gold_block" behaviour="onceOnly"/>
        <Block reward="-100.0" type="dirt" behaviour="onceOnly"/>
      </RewardForTouchingBlockType>
      <RewardForSendingCommand reward="-1" />
      <RewardForReachingPosition>
          <Marker x="-66" y="13" z="-47" reward="100" tolerance="0.1" oneshot="true"/>
          <Marker x="-66" y="13" z="-47" reward="100" tolerance="0.1" oneshot="true"/>
          <Marker x="-66" y="13" z="-47" reward="100" tolerance="0.1" oneshot="true"/>
      </RewardForReachingPosition>
      <RewardForStructureCopying rewardScale="50">
          <RewardDensity>PER_BLOCK</RewardDensity>
      </RewardForStructureCopying>
      <AgentQuitFromTouchingBlockType>
          <Block type="wool" />
          <Block type="gold_block" />
          <Block type="dirt" />
      </AgentQuitFromTouchingBlockType>
      <AgentQuitFromReachingPosition>
          <Marker x="-65" y="13" z="-47" tolerance="0.1" description="broke_wall" />
          <Marker x="-66" y="13" z="-47" tolerance="0.1" description="broke_wall" />
          <Marker x="-67" y="13" z="-47" tolerance="0.1" description="broke_wall" />
      </AgentQuitFromReachingPosition>
    </AgentHandlers>
  </AgentSection>

</Mission>
